	<mvc:view-controller path="/addItem_form.do" view-name="itemAdd.tiles"/>
	<mvc:view-controller path="/viewItem.do" view-name="viewItem.tiles"/>
	<mvc:view-controller path="/ViewItemPage.do" view-name="viewItemOne.tiles"/>
