	<mvc:view-controller path="/delete.do" view-name="Board/delete.do"/> <!-- 컨트롤러로 넘길시 -->
	<mvc:view-controller path="/update.do" view-name="Board/update.do"/> <!-- 컨트롤러로 넘길시 -->
	<mvc:view-controller path="/updateSuccess.do" view-name="Board/updateSuccess.do"/>
	<mvc:view-controller path="/insertList.do" view-name="Board/insertList.do"/>
	<mvc:view-controller path="/mainguest.do" view-name="mainguest.tiles"/> 
	<mvc:view-controller path="/updateajax.do" view-name="Board/updateajax.do"/> 
